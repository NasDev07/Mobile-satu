<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mahasiswa"
        android:background="#fff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="10dp">

                <ImageView
                        android:onClick="datadiri"
                        android:layout_width="200dp"
                        android:layout_height="110dp"
                        android:src="@drawable/user_perspective_matte"
                        android:paddingRight="20dp" />

                <TextView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:text="Data Dadir"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:layout_marginTop="100dp"
                        android:padding="20dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="190dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="10dp">

            <ImageView
                    android:onClick="krs"
                    android:layout_width="170dp"
                    android:layout_height="140dp"
                    android:src="@drawable/page_perspective_matte"
                    android:padding="15dp"/>

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="KRS"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:layout_marginTop="100dp"
                    android:padding="20dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="190dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="180dp">

            <ImageView
                    android:onClick="transkipnilai"
                    android:layout_width="170dp"
                    android:layout_height="140dp"
                    android:src="@drawable/clipboard_perspective_matte"
                    android:padding="15dp"/>

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="Transkrip Nilai"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:layout_marginTop="100dp"
                    android:padding="20dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="3dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="180dp">

            <ImageView
                    android:onClick="KelenderAkademik"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:src="@drawable/calendar_perspective_matte" />

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="Kelender Akademik"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="normal"
                    android:layout_marginTop="100dp"
                    android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>